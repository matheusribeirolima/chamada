<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="student"
            type="br.com.matheus.chamada.model.response.Student" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civStudent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/small_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/civStudent"
            android:layout_toStartOf="@+id/rlFault"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="@{student.name}"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Nota: " + student.score}'
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvFault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text='@{"Faltas: " + student.faults}'
                    android:textSize="13sp" />

            </RelativeLayout>

        </LinearLayout>



        <include
            android:id="@+id/rlFault"
            layout="@layout/layout_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp" />

        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/civStudent"
            android:background="@color/dividerColor" />

    </RelativeLayout>
</layout>